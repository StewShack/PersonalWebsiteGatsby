{
    "plugins": [
        "mocha"
    ],
    "extends": [
        "airbnb",
        "plugin:mocha/recommended"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "rules": {
      "linebreak-style": ["off", "windows"]
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "linkComponents": [
            // Components used as alternatives to <a> for linking, eg. <Link to={ url } />
            "Hyperlink",
            {"name": "Link", "linkAttribute": "to"}
        ]
    }
}